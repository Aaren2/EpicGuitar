				</Attack>
			</MeleeWeapon>
			<ItemContainer capacity="56" keepopenwhenequipped="true" movableframe="true">
				<Containable items="notes" />
			</ItemContainer>
			<Upgrade gameversion="0.10.0.0" scale="0.5" />
